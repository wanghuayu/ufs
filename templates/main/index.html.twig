{% extends 'base.html.twig' %}

{% block title %}User File App{% endblock %}

{% block body %}
    <div class="card-body bg-light">
        <div class="col-10 offset-1">
            <div>
                {% for file in files %}
                    <div class="card mb-3">
                        <div class="card-body bg-light">
                            <form class="ui form" action="{{ path('app_delete', { 'id': file.id }) }}" method="get">
                                <div class="row">
                                    <div class="col-9">
                                        <h5 class="file-title">
                                            <a href="{{ path('app_download', { 'id': file.id }) }}">{{ file.name }}</a>
                                        </h5>
                                    </div>
                                    <div >
                                        <button class="ui button" type="submit">Delete</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg text-center">
                                        <small>Upload by</small>
                                        <br>
                                        {{ file.user.email }}
                                    </div>
                                    <div class="col-lg text-center">
                                        <small>Upload time</small>
                                        <br>
                                        {{ file.uploadTime | date("m/d/Y h:i") }}
                                    </div>

                                    <div class="col-lg text-center">
                                        <small>File size</small>
                                        <br>
                                        {{ file.size }}
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center alert alert-primary">No file uploaded!</div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}